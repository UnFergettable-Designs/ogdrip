# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Svelte files
[*.svelte]
indent_size = 2

# Astro files
[*.astro]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Package manager files
[{package.json,package-lock.json,pnpm-lock.yaml}]
indent_size = 2
