# Backend Production Environment Configuration
# Copy this to .env.production and customize for your deployment

# API Service Configuration
OG_API_SERVICE=true
PORT=8888
BASE_URL=https://your-domain.com
LOG_LEVEL=info

# Database Configuration
DB_PATH=./data/ogdrip.db

# Chrome/Chromium Configuration
CHROME_PATH=/nix/store/*/bin/chromium
CHROME_DISABLE_SANDBOX=true

# Output Configuration
OUTPUT_DIR=./outputs
MAX_QUEUE_SIZE=50

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30s
CHROME_TIMEOUT=30s

# Monitoring Configuration
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30s

# Error Reporting (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600s

# Resource Limits
MAX_IMAGE_WIDTH=2400
MAX_IMAGE_HEIGHT=1260
MAX_FILE_SIZE=10MB