{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "BACKEND_URL", 
    "PORT",
    "SVELTE_FORCE_COMPILE",
    "ASTRO_TELEMETRY_DISABLED"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:frontend": {
      "cache": false,
      "persistent": true
    },
    "dev:backend": {
      "cache": false,
      "persistent": true
    },
    "dev:all": {
      "cache": false,
      "dependsOn": ["dev:frontend", "dev:backend"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "preview": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "validate": {
      "cache": false,
      "outputs": []
    }
  }
} 